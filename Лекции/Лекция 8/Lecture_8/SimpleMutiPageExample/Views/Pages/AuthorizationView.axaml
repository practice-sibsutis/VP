<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SimpleMultiPageExample.Views.Pages.AuthorizationView">
  	<Grid ColumnDefinitions="0.5*, 0.5*" RowDefinitions="0.5*, 0.5*">
		<TextBlock Grid.Column="0" Grid.Row="0" Text="Login:"/>
		<TextBlock Grid.Column="0" Grid.Row="1" Text="Password:"/>
		<TextBox Grid.Column="1" Grid.Row="0" Text="Login:"/>
		<TextBox PasswordChar="*" Grid.Column="1" Grid.Row="1" Text="Password:"/>
	</Grid>

</UserControl>
