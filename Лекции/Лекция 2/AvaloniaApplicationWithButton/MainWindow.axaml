<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaApplicationWithButton.MainWindow"
        Title="AvaloniaApplicationWithButton">
    <Grid ColumnDefinitions="300, 300, 300" RowDefinitions="200">
        <Button 
            Grid.Column="0" Grid.Row="0" 
            VerticalAlignment="Top"
            Click="ButtonClickHandler">
            Нажми на меня
        </Button>

        <Label Grid.Column="1" Grid.Row="0" VerticalAlignment="Top">Количество нажатий:</Label>
        <Label Name="ClickCounter" Grid.Column="2" Grid.Row="0" VerticalAlignment="Top">0</Label>
    </Grid>
</Window>
